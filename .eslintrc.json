{
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "quotes": ["error", "double", { "avoidEscape": true }],
    "indent": ["error", 2],
    "max-len": ["error", { "code": 80 }],
    "prettier/prettier": [
      "error",
      { "endOfLine": "auto" },
      { "usePrettierrc": true }
    ]
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "plugins": [
    "react",
    "react-hooks",
    "prettier"
  ]
}
